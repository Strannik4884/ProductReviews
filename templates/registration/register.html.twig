{% extends 'base.html.twig' %}

{% block title %}Регистрация{% endblock %}

{% block content %}
    <!-- Register form -->
    <div class="section">
        <div class="valign-wrapper" style="flex: 1;">
            <div class="container valign" style="max-width: 500px;">
                {{ form_start(registrationForm, {'attr':{'class':'col s12', 'accept-charset':'utf-8'}}) }}
                {% set formErrors = registrationForm.vars.errors.form.getErrors(true) %}
                {% if formErrors|length %}
                <div class="alert alert-danger">
                    {% for error in formErrors %}
                    <div class="materialert error">
                        <div class="material-icons">error_outline</div>
                        {{ error.message }}
                    </div>
                    {% endfor %}
                </div>
                {% endif %}
                <div class="row">
                    <div class="col s12">
                        <h5>Регистрация</h5>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s12">
                        {{ form_widget(registrationForm.name) }}
                        {{ form_label(registrationForm.name) }}
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s12">
                        {{ form_widget(registrationForm.login) }}
                        {{ form_label(registrationForm.login) }}
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s12">
                        {{ form_widget(registrationForm.plainPassword.first) }}
                        {{ form_label(registrationForm.plainPassword.first) }}
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s12">
                        {{ form_widget(registrationForm.plainPassword.second) }}
                        {{ form_label(registrationForm.plainPassword.second) }}
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s12">
                        {{ form_widget(registrationForm.email) }}
                        {{ form_label(registrationForm.email) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col s12">
                        <label>
                            {{ form_widget(registrationForm.agreeTerms) }}
                            <span>Согласие на обработку данных</span>
                        </label>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s12">
                        <button class="btn waves-effect waves-light" style="float: right;" type="submit">Зарегистрироваться<i class="material-icons right">send</i></button>
                    </div>
                </div>
                {{ form_end(registrationForm) }}
            </div>
        </div>
    </div>
{% endblock %}